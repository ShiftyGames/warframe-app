root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
#end_of_line = lf # use native line endings
insert_final_newline = true

[*.html.j2]
indent_style = space
indent_size = 4
max_line_length = 80

[*.{js,css,scss}]
quote_type = single

[*.js]
indent_style = space
indent_size = 4
max_line_length = 80

#[*.{yml,yaml}]
#quote_type = double

[*.md]
trim_trailing_whitespace = false
